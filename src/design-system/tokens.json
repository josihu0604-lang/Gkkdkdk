{
  "$schema": "https://tr.designtokens.org/format/2.0/schema.json",
  "name": "ZZIK Design System",
  "version": "1.0.0",
  "description": "ZZIK Design System - Adapted from Linear App 2025 with ZZIK Brand Colors",
  "colors": {
    "$type": "color",
    "gray": {
      "0": { "$value": "oklch(100% 0 240)", "$description": "Pure White" },
      "50": { "$value": "oklch(98% 0.002 240)" },
      "100": { "$value": "oklch(96% 0.004 240)" },
      "200": { "$value": "oklch(92% 0.008 240)" },
      "300": { "$value": "oklch(85% 0.012 240)" },
      "400": { "$value": "oklch(70% 0.015 240)" },
      "500": { "$value": "oklch(55% 0.018 240)", "$description": "Mid Gray" },
      "600": { "$value": "oklch(45% 0.015 240)" },
      "700": { "$value": "oklch(32% 0.012 240)" },
      "800": { "$value": "oklch(20% 0.008 240)" },
      "900": { "$value": "oklch(12% 0.004 240)" },
      "950": { "$value": "oklch(8% 0.002 240)" },
      "1000": { "$value": "oklch(0% 0 240)", "$description": "Pure Black" }
    },
    "primary": {
      "$description": "Brand Orange (#FF6B35) - Action, Rewards, Energy",
      "50": { "$value": "oklch(97% 0.03 35)" },
      "100": { "$value": "oklch(93% 0.07 35)" },
      "200": { "$value": "oklch(87% 0.12 35)" },
      "300": { "$value": "oklch(78% 0.16 35)" },
      "400": { "$value": "oklch(70% 0.19 35)" },
      "500": { "$value": "oklch(65% 0.20 35)", "$description": "Main Brand - #FF6B35" },
      "600": { "$value": "oklch(58% 0.19 35)" },
      "700": { "$value": "oklch(48% 0.16 35)" },
      "800": { "$value": "oklch(38% 0.12 35)" },
      "900": { "$value": "oklch(28% 0.08 35)" }
    },
    "secondary": {
      "$description": "Navy Blue (#004E89) - Trust, B2B, Professionalism",
      "50": { "$value": "oklch(96% 0.02 245)" },
      "100": { "$value": "oklch(92% 0.04 245)" },
      "200": { "$value": "oklch(84% 0.07 245)" },
      "300": { "$value": "oklch(72% 0.10 245)" },
      "400": { "$value": "oklch(58% 0.12 245)" },
      "500": { "$value": "oklch(48% 0.13 245)", "$description": "Main Navy - #004E89" },
      "600": { "$value": "oklch(40% 0.12 245)" },
      "700": { "$value": "oklch(32% 0.10 245)" },
      "800": { "$value": "oklch(24% 0.07 245)" },
      "900": { "$value": "oklch(16% 0.04 245)" }
    },
    "accent": {
      "$description": "Green (#00D9A3) - Success, Money, Achievement",
      "50": { "$value": "oklch(96% 0.03 165)" },
      "100": { "$value": "oklch(92% 0.07 165)" },
      "200": { "$value": "oklch(86% 0.11 165)" },
      "300": { "$value": "oklch(80% 0.13 165)" },
      "400": { "$value": "oklch(72% 0.14 165)" },
      "500": { "$value": "oklch(75% 0.15 165)", "$description": "Main Accent - #00D9A3" },
      "600": { "$value": "oklch(65% 0.14 165)" },
      "700": { "$value": "oklch(55% 0.12 165)" },
      "800": { "$value": "oklch(45% 0.09 165)" },
      "900": { "$value": "oklch(35% 0.06 165)" }
    },
    "semantic": {
      "success": { "$value": "oklch(65% 0.20 145)", "$description": "Green" },
      "warning": { "$value": "oklch(70% 0.18 80)", "$description": "Yellow" },
      "error": { "$value": "oklch(60% 0.22 30)", "$description": "Red" },
      "info": { "$value": "oklch(60% 0.20 230)", "$description": "Cyan" }
    }
  },
  "typography": {
    "fontFamilies": {
      "$type": "fontFamily",
      "sans": {
        "$value": ["Inter", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "sans-serif"],
        "$description": "Primary font - Inter Variable (English)"
      },
      "sansKo": {
        "$value": ["Pretendard", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Malgun Gothic", "sans-serif"],
        "$description": "Korean font - Pretendard"
      },
      "sansZh": {
        "$value": ["Noto Sans SC", "-apple-system", "BlinkMacSystemFont", "PingFang SC", "Microsoft YaHei", "sans-serif"],
        "$description": "Chinese Simplified font - Noto Sans SC"
      },
      "mono": {
        "$value": ["SF Mono", "Monaco", "Cascadia Code", "Courier New", "monospace"],
        "$description": "Monospace font"
      }
    },
    "fontSizes": {
      "$type": "dimension",
      "xs": { "$value": "0.75rem", "$description": "12px" },
      "sm": { "$value": "0.875rem", "$description": "14px" },
      "base": { "$value": "1rem", "$description": "16px - Body" },
      "lg": { "$value": "1.125rem", "$description": "18px" },
      "xl": { "$value": "1.25rem", "$description": "20px" },
      "2xl": { "$value": "1.5rem", "$description": "24px" },
      "3xl": { "$value": "1.875rem", "$description": "30px" },
      "4xl": { "$value": "2.25rem", "$description": "36px" },
      "5xl": { "$value": "3rem", "$description": "48px" }
    },
    "fontWeights": {
      "$type": "fontWeight",
      "normal": { "$value": 400 },
      "medium": { "$value": 500 },
      "semibold": { "$value": 600 },
      "bold": { "$value": 700 }
    },
    "lineHeights": {
      "$type": "number",
      "tight": { "$value": 1.2 },
      "snug": { "$value": 1.375 },
      "normal": { "$value": 1.5 },
      "relaxed": { "$value": 1.625 },
      "loose": { "$value": 1.75 }
    },
    "letterSpacing": {
      "$type": "dimension",
      "tighter": { "$value": "-0.05em" },
      "tight": { "$value": "-0.025em" },
      "normal": { "$value": "0" },
      "wide": { "$value": "0.025em" }
    }
  },
  "spacing": {
    "$type": "dimension",
    "$description": "4px Base Unit - Linear's spacing system",
    "0": { "$value": "0" },
    "1": { "$value": "0.25rem", "$description": "4px" },
    "2": { "$value": "0.5rem", "$description": "8px" },
    "3": { "$value": "0.75rem", "$description": "12px" },
    "4": { "$value": "1rem", "$description": "16px" },
    "5": { "$value": "1.25rem", "$description": "20px" },
    "6": { "$value": "1.5rem", "$description": "24px" },
    "8": { "$value": "2rem", "$description": "32px" },
    "10": { "$value": "2.5rem", "$description": "40px" },
    "12": { "$value": "3rem", "$description": "48px" },
    "16": { "$value": "4rem", "$description": "64px" },
    "20": { "$value": "5rem", "$description": "80px" },
    "24": { "$value": "6rem", "$description": "96px" },
    "32": { "$value": "8rem", "$description": "128px" }
  },
  "borderRadius": {
    "$type": "dimension",
    "none": { "$value": "0" },
    "sm": { "$value": "0.25rem", "$description": "4px" },
    "base": { "$value": "0.375rem", "$description": "6px - Linear's default" },
    "md": { "$value": "0.5rem", "$description": "8px" },
    "lg": { "$value": "0.75rem", "$description": "12px" },
    "xl": { "$value": "1rem", "$description": "16px" },
    "2xl": { "$value": "1.5rem", "$description": "24px" },
    "full": { "$value": "9999px", "$description": "Pill shape" }
  },
  "shadows": {
    "$type": "shadow",
    "$description": "Multi-layer depth shadows (6 elevations)",
    "xs": {
      "$value": {
        "offsetX": "0",
        "offsetY": "1px",
        "blur": "2px",
        "spread": "0",
        "color": "rgba(0, 0, 0, 0.04)"
      }
    },
    "sm": {
      "$value": [
        {
          "offsetX": "0",
          "offsetY": "1px",
          "blur": "3px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.08)"
        },
        {
          "offsetX": "0",
          "offsetY": "1px",
          "blur": "2px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.04)"
        }
      ]
    },
    "base": {
      "$value": [
        {
          "offsetX": "0",
          "offsetY": "2px",
          "blur": "4px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.08)"
        },
        {
          "offsetX": "0",
          "offsetY": "1px",
          "blur": "2px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.04)"
        }
      ]
    },
    "md": {
      "$value": [
        {
          "offsetX": "0",
          "offsetY": "4px",
          "blur": "6px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.08)"
        },
        {
          "offsetX": "0",
          "offsetY": "2px",
          "blur": "4px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.04)"
        },
        {
          "offsetX": "0",
          "offsetY": "1px",
          "blur": "2px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.02)"
        }
      ]
    },
    "lg": {
      "$value": [
        {
          "offsetX": "0",
          "offsetY": "10px",
          "blur": "15px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.10)"
        },
        {
          "offsetX": "0",
          "offsetY": "4px",
          "blur": "6px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.06)"
        },
        {
          "offsetX": "0",
          "offsetY": "2px",
          "blur": "4px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.03)"
        }
      ]
    },
    "xl": {
      "$value": [
        {
          "offsetX": "0",
          "offsetY": "20px",
          "blur": "25px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.12)"
        },
        {
          "offsetX": "0",
          "offsetY": "10px",
          "blur": "10px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.06)"
        },
        {
          "offsetX": "0",
          "offsetY": "4px",
          "blur": "6px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.04)"
        }
      ]
    },
    "2xl": {
      "$value": [
        {
          "offsetX": "0",
          "offsetY": "25px",
          "blur": "50px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.15)"
        },
        {
          "offsetX": "0",
          "offsetY": "15px",
          "blur": "20px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.08)"
        },
        {
          "offsetX": "0",
          "offsetY": "5px",
          "blur": "10px",
          "spread": "0",
          "color": "rgba(0, 0, 0, 0.05)"
        }
      ]
    }
  },
  "animation": {
    "duration": {
      "$type": "duration",
      "instant": { "$value": "0ms" },
      "fast": { "$value": "150ms" },
      "base": { "$value": "250ms" },
      "slow": { "$value": "350ms" },
      "slower": { "$value": "500ms" }
    },
    "easing": {
      "$type": "cubicBezier",
      "linear": { "$value": [0, 0, 1, 1] },
      "in": { "$value": [0.4, 0, 1, 1] },
      "out": { "$value": [0, 0, 0.2, 1] },
      "inOut": { "$value": [0.4, 0, 0.2, 1] },
      "spring": { "$value": [0.34, 1.56, 0.64, 1], "$description": "Linear's bounce effect" }
    }
  },
  "zIndex": {
    "$type": "number",
    "base": { "$value": 0 },
    "dropdown": { "$value": 1000 },
    "sticky": { "$value": 1020 },
    "fixed": { "$value": 1030 },
    "modalBackdrop": { "$value": 1040 },
    "modal": { "$value": 1050 },
    "popover": { "$value": 1060 },
    "tooltip": { "$value": 1070 },
    "toast": { "$value": 1080 }
  },
  "breakpoints": {
    "$type": "dimension",
    "sm": { "$value": "640px" },
    "md": { "$value": "768px" },
    "lg": { "$value": "1024px" },
    "xl": { "$value": "1280px" },
    "2xl": { "$value": "1536px" }
  },
  "mobile": {
    "$description": "Mobile-specific tokens for ZZIK app",
    "tabBar": {
      "$type": "dimension",
      "height": { "$value": "56px", "$description": "iOS standard tab bar" },
      "iconSize": { "$value": "24px" },
      "spacing": { "$value": "0.5rem", "$description": "8px" }
    },
    "map": {
      "$type": "dimension",
      "markerSize": { "$value": "40px", "$description": "Voucher marker size" },
      "radiusPulse": { "$value": "100px", "$description": "GPS discovery radius" },
      "clusterSize": { "$value": "48px", "$description": "Marker cluster size" }
    },
    "video": {
      "$type": "number",
      "aspectRatio": { "$value": 0.5625, "$description": "9:16 vertical (9/16 = 0.5625)" },
      "controlsInset": { "$value": "1.5rem", "$description": "24px safe area" }
    },
    "card": {
      "$type": "dimension",
      "reelHeight": { "$value": "calc(100vh - 56px)", "$description": "Full screen minus tab bar" },
      "voucherRadius": { "$value": "1rem", "$description": "16px rounded" }
    }
  }
}
