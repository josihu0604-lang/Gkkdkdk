# ZZIK Platform Environment Variables
# Copy this file to .env.local and fill in your values

# ==================== Application ====================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=ZZIK
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==================== Database ====================
# Vercel Postgres (production)
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# ==================== Redis Cache ====================
# Vercel KV (production)
KV_URL=
KV_REST_API_URL=
KV_REST_API_TOKEN=
KV_REST_API_READ_ONLY_TOKEN=

# ==================== Authentication ====================
# JWT secret for token signing
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# NextAuth.js (if using)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-this

# ==================== Blockchain ====================
# Base Network (for USDC payments)
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_USDC_CONTRACT=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# Wallet Connect
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# ==================== Maps ====================
# Mapbox (for landing page map)
NEXT_PUBLIC_MAPBOX_TOKEN=

# Google Maps (alternative)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# ==================== Analytics ====================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Vercel Analytics (automatic if deployed on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# ==================== Error Tracking ====================
# Sentry
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# ==================== Logging ====================
# External log endpoint (optional)
LOG_ENDPOINT=

# Log level (DEBUG, INFO, WARN, ERROR, FATAL)
LOG_LEVEL=INFO

# ==================== Rate Limiting ====================
# Upstash Redis for distributed rate limiting
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# In-memory rate limiting config (fallback)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# ==================== Email ====================
# SendGrid (for transactional emails)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@zzik.app

# Resend (alternative)
RESEND_API_KEY=

# ==================== S3 Storage ====================
# AWS S3 (for user uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=zzik-uploads

# Cloudflare R2 (alternative)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=

# ==================== Feature Flags ====================
NEXT_PUBLIC_FEATURE_GPS_KALMAN_FILTER=true
NEXT_PUBLIC_FEATURE_WEB_VITALS=true
NEXT_PUBLIC_FEATURE_ERROR_BOUNDARY=true

# ==================== API Keys ====================
# Internal API key for server-to-server calls
INTERNAL_API_KEY=your-internal-api-key-change-this

# Webhook secret for external integrations
WEBHOOK_SECRET=your-webhook-secret-change-this

# ==================== Development ====================
# Skip certain checks in development
SKIP_ENV_VALIDATION=false

# Enable debug logging
DEBUG=false

# Mock data for development
USE_MOCK_DATA=true
